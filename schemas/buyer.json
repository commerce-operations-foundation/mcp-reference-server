{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Buyer",
  "type": "object",
  "description": "Buyer entity schema (based on User entity)",
  "required": ["name", "email", "roles"],
  "properties": {
    "userId": {
      "type": "string",
      "description": "User ID"
    },
    "name": {
      "type": "string",
      "description": "User Name"
    },
    "email": {
      "type": "string",
      "description": "User email"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "User role names/ids"
    },
    "address": {
      "type": "object",
      "properties": {
        "address1": {
          "type": "string",
          "description": "Address"
        },
        "address2": {
          "type": "string",
          "description": "Address Line 2"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "company": {
          "type": "string",
          "description": "Company"
        },
        "country": {
          "type": "string",
          "description": "Country"
        },
        "firstName": {
          "type": "string",
          "description": "First Name"
        },
        "lastName": {
          "type": "string",
          "description": "Last Name"
        },
        "stateOrProvince": {
          "type": "string",
          "description": "State or Province"
        },
        "zipCodeOrPostalCode": {
          "type": "string",
          "description": "zipcode or postal code"
        }
      }
    },
    "blockedFeatures": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string",
      "description": "User Description"
    },
    "internal": {
      "type": "object",
      "description": "Internal information"
    },
    "loginInfo": {
      "type": "object",
      "properties": {
        "lastIPAddress": {
          "type": "string",
          "description": "Last login IP address"
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time",
          "description": "Last login date"
        },
        "loginsCount": {
          "type": "number",
          "description": "Total number of logins"
        }
      }
    },
    "methods": {
      "type": "object"
    },
    "phone": {
      "type": "string",
      "description": "User Phone"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "disabled"],
      "description": "User Status"
    },
    "timeZone": {
      "type": "string",
      "description": "User Time Zone"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was created"
    },
    "orgKey": {
      "type": "string",
      "readOnly": true,
      "description": "Organization this object belong to"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was updated"
    }
  }
}