{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order",
  "type": "object",
  "description": "Order entity schema",
  "properties": {
    "id": {
      "type": "string",
      "description": "Auto Generated order ID"
    },
    "externalId": {
      "type": "string",
      "description": "External Order ID"
    },
    "status": {
      "type": "string",
      "description": "Order status"
    },
    "billingAddress": {
      "type": "object",
      "description": "Purchaser Address",
      "properties": {
        "address1": {
          "type": "string",
          "description": "Address"
        },
        "address2": {
          "type": "string",
          "description": "Address Line 2"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "company": {
          "type": "string",
          "description": "Company"
        },
        "country": {
          "type": "string",
          "description": "ISO 2 letter code only"
        },
        "email": {
          "type": "string",
          "description": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First Name"
        },
        "lastName": {
          "type": "string",
          "description": "Last Name"
        },
        "phone": {
          "type": "string",
          "description": "Phone"
        },
        "stateOrProvince": {
          "type": "string",
          "description": "If within the US, required 2 letter State Code"
        },
        "zipCodeOrPostalCode": {
          "type": "string",
          "description": "zipcode or postal code"
        }
      }
    },
    "currency": {
      "type": "string",
      "description": "Order currency code"
    },
    "customFields": {
      "type": "array",
      "description": "Custom Fields",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "customer": {
      "type": "object",
      "description": "Order customer information",
      "properties": {
        "company": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "externalId": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    },
    "discounts": {
      "type": "array",
      "description": "Discounts",
      "items": {
        "type": "object"
      }
    },
    "expectedDeliveryDate": {
      "type": "string",
      "format": "date-time",
      "description": "First Priority to be respected"
    },
    "giftNote": {
      "type": "string",
      "description": "Order Gift note"
    },
    "lineItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Line Item ID"
          },
          "sku": {
            "type": "string",
            "description": "SKU"
          },
          "name": {
            "type": "string",
            "description": "Name"
          },
          "unitPrice": {
            "type": "number",
            "format": "float",
            "description": "unit price as reported by source"
          },
          "quantity": {
            "type": "number",
            "format": "float",
            "description": "quantity as reported by source"
          }
        }
      }
    },
    "orderDiscount": {
      "type": "number",
      "format": "float",
      "description": "Order Discount"
    },
    "orderNote": {
      "type": "string",
      "description": "Order Notes"
    },
    "orderSource": {
      "type": "string",
      "description": "The original order platform, walmart, etsy, etc"
    },
    "orderTax": {
      "type": "number",
      "format": "float",
      "description": "Order Tax"
    },
    "paymentStatus": {
      "type": "string",
      "description": "status of the payment"
    },
    "paymentTerms": {
      "type": "object",
      "description": "Payments terms"
    },
    "payments": {
      "type": "array",
      "description": "Payments",
      "items": {
        "type": "object"
      }
    },
    "refunds": {
      "type": "array",
      "description": "Refunds",
      "items": {
        "type": "object"
      }
    },
    "shipAfterDate": {
      "type": "string",
      "format": "date-time",
      "description": "Ship After Date"
    },
    "shipByDate": {
      "type": "string",
      "format": "date-time",
      "description": "Ship By Date"
    },
    "shipCancelByDate": {
      "type": "string",
      "format": "date-time",
      "description": "Ship Cancel By Date"
    },
    "shippingAddress": {
      "type": "object",
      "description": "Recipient Address",
      "properties": {
        "address1": {
          "type": "string",
          "description": "Address"
        },
        "address2": {
          "type": "string",
          "description": "Address Line 2"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "company": {
          "type": "string",
          "description": "Company"
        },
        "country": {
          "type": "string",
          "description": "ISO 2 letter code only"
        },
        "email": {
          "type": "string",
          "description": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First Name"
        },
        "lastName": {
          "type": "string",
          "description": "Last Name"
        },
        "phone": {
          "type": "string",
          "description": "Phone"
        },
        "stateOrProvince": {
          "type": "string",
          "description": "If within the US, required 2 letter State Code"
        },
        "zipCodeOrPostalCode": {
          "type": "string",
          "description": "zipcode or postal code"
        }
      }
    },
    "shippingCarrier": {
      "type": "string",
      "description": "Required with ShippingClass, 2nd Priority"
    },
    "shippingClass": {
      "type": "string",
      "description": "Required with ShippingCarrier, 2nd Priority"
    },
    "shippingCode": {
      "type": "string",
      "description": "1st Priority"
    },
    "shippingNote": {
      "type": "string",
      "description": "Shipping Notes"
    },
    "shippingPrice": {
      "type": "number",
      "format": "float",
      "description": "Shipping price"
    },
    "subTotalPrice": {
      "type": "number",
      "format": "float",
      "description": "Sub Total Price"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "totalPrice": {
      "type": "number",
      "format": "float",
      "description": "Total Price"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was created"
    },
    "tenantId": {
      "type": "string",
      "readOnly": true,
      "description": "Tenant this object belong to"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was updated"
    }
  }
}