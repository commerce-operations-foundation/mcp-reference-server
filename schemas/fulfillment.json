{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shipment",
  "type": "object",
  "description": "Shipment entity schema",
  "required": ["extOrderId", "shippingAddress"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Shipment ID"
    },
    "extOrderId": {
      "type": "string",
      "description": "Customer friendly ID on the order object"
    },
    "shippingAddress": {
      "type": "object",
      "description": "Shipping address",
      "properties": {
        "address1": {
          "type": "string",
          "description": "Address"
        },
        "address2": {
          "type": "string",
          "description": "Address Line 2"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "company": {
          "type": "string",
          "description": "Company"
        },
        "country": {
          "type": "string",
          "description": "ISO 2 letter code only"
        },
        "email": {
          "type": "string",
          "description": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First Name"
        },
        "lastName": {
          "type": "string",
          "description": "Last Name"
        },
        "phone": {
          "type": "string",
          "description": "Phone"
        },
        "stateOrProvince": {
          "type": "string",
          "description": "If within the US, required 2 letter State Code"
        },
        "zipCodeOrPostalCode": {
          "type": "string",
          "description": "zipcode or postal code"
        }
      }
    },
    "currency": {
      "type": "string",
      "description": "Currency code (inherited from order)"
    },
    "customFields": {
      "type": "array",
      "description": "Custom Fields",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "expectedDeliveryDate": {
      "type": "string",
      "format": "date-time",
      "description": "First Priority to be respected"
    },
    "giftNote": {
      "type": "string",
      "description": "Shipping Gift note"
    },
    "incoterms": {
      "type": "string",
      "description": "International Commercial Terms"
    },
    "locationId": {
      "type": "string",
      "description": "Id of location defined in organization"
    },
    "orderId": {
      "type": "string",
      "description": "Internal Order's orderId"
    },
    "shippingCarrier": {
      "type": "string",
      "description": "Required with ShippingClass, 2nd Priority"
    },
    "shippingClass": {
      "type": "string",
      "description": "Required with ShippingCarrier, 2nd Priority"
    },
    "shippingCode": {
      "type": "string",
      "description": "1st Priority"
    },
    "shippingNote": {
      "type": "string",
      "description": "Shipping Note"
    },
    "shippingPrice": {
      "type": "number",
      "format": "float",
      "description": "Shipping price"
    },
    "status": {
      "type": "string",
      "description": "Shipment status"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was created"
    },
    "tenantId": {
      "type": "string",
      "readOnly": true,
      "description": "Tenant this object belong to"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "readOnly": true,
      "description": "When the object was updated"
    }
  }
}