# Universal OMS MCP Server Configuration
# Copy this file to .env and update with your actual values

# ===========================
# Adapter Configuration
# ===========================

# Adapter Type: npm | local | built-in
ADAPTER_TYPE=npm

# For NPM package adapters
ADAPTER_PACKAGE=@yourcompany/onx-adapter-youroms

# For local adapters (path to built dist folder)
# ADAPTER_TYPE=local
# ADAPTER_PATH=../youroms-adapter/dist

# Optional: Export name if adapter uses named export
# ADAPTER_EXPORT_NAME=YourOMSAdapter

# ===========================
# Adapter Options
# ===========================

# Required: Your OMS API Configuration
ADAPTER_OPTIONS_API_URL=https://api.youroms.com
ADAPTER_OPTIONS_API_KEY=your-api-key-here

# Optional: Workspace or Tenant ID
ADAPTER_OPTIONS_WORKSPACE=your-workspace

# Optional: Request timeout in milliseconds (default: 30000)
ADAPTER_OPTIONS_TIMEOUT=30000

# Optional: Number of retry attempts for failed requests (default: 3)
ADAPTER_OPTIONS_RETRY_ATTEMPTS=3

# Optional: Enable debug mode for detailed logging (default: false)
ADAPTER_OPTIONS_DEBUG_MODE=false

# ===========================
# MCP Server Configuration
# ===========================

# Server port (default: 3000)
SERVER_PORT=3000

# Server host (default: localhost)
SERVER_HOST=localhost

# Log level: debug | info | warn | error
LOG_LEVEL=info

# Enable CORS (default: true)
ENABLE_CORS=true

# ===========================
# Security Configuration
# ===========================

# API Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Maximum request body size
MAX_REQUEST_SIZE=10mb

# Request timeout for MCP server
REQUEST_TIMEOUT=60000

# ===========================
# Optional Features
# ===========================

# Enable metrics collection
ENABLE_METRICS=false

# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================
# Environment-Specific Settings
# ===========================

# Environment: development | staging | production
NODE_ENV=development

# ===========================
# Database Configuration (if needed)
# ===========================

# Some adapters may need database for caching or state management
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=youroms_adapter
# DB_USER=adapter_user
# DB_PASSWORD=secure_password

# ===========================
# Redis Configuration (if needed)
# ===========================

# For caching or rate limiting
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ===========================
# Webhook Configuration (if needed)
# ===========================

# For receiving OMS webhooks
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_ENDPOINT=/webhooks/youroms

# ===========================
# Custom OMS-Specific Settings
# ===========================

# Add any OMS-specific configuration here
# YOUROMS_REGION=us-east-1
# YOUROMS_API_VERSION=v2
# YOUROMS_SANDBOX_MODE=false